<% if(user === "secretaire"){%>
  <p class="manage mt-1">
    <a href="/addformations" class="btn manageBtn" >Ajouter une formation</a>
  </p>
      <table cellspacing="0" border="1" align="center" cellpadding="20" class="affTable">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Duree</th>
        <th>Action</th>

      </tr>
    </thead>
    <tbody>
      <% formations.forEach(item => { %>
        <tr>
          <td><%= item.label %></td>
          <td><%= item.duree %></td>
            <td align="center"><a href="/updateformation/<%= item.id %>" class="btn actionBtn">update</a>
            <a href="/deleteformation/<%= item.id %>" onclick="return confirm('vous etes entrain de supprimer la formation \' <%= item.label %> \' !')" class="btn actionBtn">delete</a></td>
        </tr>
        <% }); %> <% }else{ %>  page not available<% } %>
      </tbody>
  </table>
  