<% if(user === "secretaire" || user === "formateur"){ %>

    <h3 class="manage" > Ajouter un cours </h3>
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> -->

    <form method="post" action="/addCours" enctype="multipart/form-data" class="manageForm">
    
        <table cellpadding="20" >
            <tr>
                <td><label for="label">Title :</label></td>
                <td><input type="text" id="label" name="label" required class="logInp"></td>
            </tr>
            <tr>
                <td><label for="payant">Type :</label></td>
                <td><select  id="payant"  name="payant" required class="logInp" onchange="check()">
                    <option value="0">Gratuit</option>
                    <option value="1">Payant</option>
                </select></td>
            </tr>
            <tr>
                <td><label for="montant">Montant :</label></td>
                <td><input  id="montant" value="0.00" name="montant" required class="logInp"></td>
            </tr>
            <tr>
                <td style="vertical-align: top;"><label for="description">Description :</label></td>
                <td><textarea  id="description" rows="30" cols="100" name="description" required class="logInp"></textarea></td>
            </tr>
            <tr>
                <td>Pdf File :</td>
                <td>    
                   <input type="file" name="coursPdf" id="coursPdf"  accept=".pdf">
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Ajouter" class="logBtn btn actionBtn"></td>
            </tr>
        </table>
    

    </form>
    <script>
         const p = document.querySelector('#payant');
        const m = document.querySelector('#montant');
        m.readOnly= true
        function check(){
           
        if(p.value == 0 ){
            m.readOnly= true
            m.value="0";
        }
        else{
            m.readOnly=false;
            
        }

        }
        
    </script>

    <% }else{ %>  page not available <% } %>